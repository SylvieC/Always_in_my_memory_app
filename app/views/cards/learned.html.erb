<%= render partial: 'navbar'%><br><br>
<div class="container">

	<h1>"I know it pile"</h1>




	<a href="/reserve">Go to the reserve pile</a><br>
	<a href="/cards">Let's practice</a>
</div>

<% Stack.find(3).cards.each do |card| %>
<div class="row">
  <div class="col-xs-1">
  
  <%= button_to "delete", {controller: :cards, action: :destroy, id: card.id }, :method => :delete %>
   </div>
  <div class="col-xs-5">
    <div class="well">
      <%= card.title %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="well">
      <%= card.content %>
    </div>
  </div>
  <div class="clearfix hidden-md hidden-lg">
  </div>
</div>
<hr/>
<% end %>

