  <!-- Forms to create 1 card  -->
   <h4>Add cards to the reserve pile</h4> 
<div class="container form">
  <br/>

<%= form_for :card do |f| %>

  <div class="row">
    <div class="col-md-6">
      <%= f.label :'front of card' %>
      <%= f.text_area :title %>
    </div>
    <div class="col-md-6">
      <%= f.label :'back of card' %>:
      <%= f.text_area :content %>
    </div>
  </div>


<%= f.submit %> 


<% end %>
</div>





  <h1>This is the Reserve pile of cards</h1>
  




<!-- Show the List of Cards in Reserve pile -->

  <% if Stack.find(1).cards.empty? %>
  <div class="notify">
    <div class="row col-sm-4 col-sm-offset-4">
      <h4>The reserve pile is empty, please add more cards</h4>
    </div>
  </div>
  <% else %>
  <div class="notify col-sm-4 col-sm-offset-4 ">
        <p>Cards left in pile : <strong><%= Stack.find(1).cards.length %></strong> </p>
    </div>
   <% end %>

     <div class="clearfix hidden-md hidden-lg">
     </div>
     
  
  
  
<!-- 
Iterate through the pile to show the cards -->
<div class="container">
<% Stack.find(1).cards.each do |card| %>
<div class="row">
  <div class="col-xs-1">
  
  <%= button_to "delete", {controller: :cards, action: :destroy, id: card.id }, :method => :delete %>
   </div>
  <div class="col-xs-5">
    <div class="well">
      <%= card.title %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="well">
      <%= card.content %>
    </div>
  </div>
  <div class="clearfix hidden-md hidden-lg">
  </div>
</div
<hr/>
<% end %>
</div>












