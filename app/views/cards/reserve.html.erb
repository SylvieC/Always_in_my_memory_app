 <div class="container">


  <h1>This is the Reserve pile of cards</h1>
  <p>Add the cards you want to add.</p>
</div>

<!-- Show the List of Cards in Reserve pile -->
<div class="container">
  <% if Stack.find(1).cards.empty? %>
  <div class="container empty">
    <div class="row col-sm-12">
      <h4>The reserve pile is empty, please add more cards</h4>
    </div>
  </div>
  <% else %>
  <div class="container">
    <div class="row col-sm-12">
      <div class="well">
        <p>There are <%= Stack.find(1).cards.length %> cards left in the reserve pile</p>
      </div>
    </div>
  </div>
  <div class="title col.sm.12">
    <h3>Cards in the Reserve Pile</h3>
  </div>
  <% end %>
</div>

<% Stack.find(1).cards.each do |card| %>
<div class="row">
  <div class="col-xs-1">
  
  <%= button_to "delete", {controller: :cards, action: :destroy, id: card.id }, :method => :delete %>
   </div>
  <div class="col-xs-5">
    <div class="well">
      <%= card.title %>
    </div>
  </div>
  <div class="col-xs-6">
    <div class="well">
      <%= card.content %>
    </div>
  </div>
  <div class="clearfix hidden-md hidden-lg">
  </div>
</div>
<hr/>
<% end %>










